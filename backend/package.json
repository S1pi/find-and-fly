{
  "name": "faf-backend",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "modules/auth-server",
    "modules/file-server",
    "modules/media-server"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:auth": "cd modules/auth-server && npm run dev",
    "dev:file": "cd modules/file-server && npm run dev",
    "dev:media": "cd modules/media-server && npm run dev",
    "dev:all": "concurrently \"npm run dev:auth\" \"npm run dev:file\" \"npm run dev:media\"",
    "build:auth": "cd modules/auth-server && npm run build",
    "build:file": "cd modules/file-server && npm run build",
    "build:media": "cd modules/media-server && npm run build",
    "build:all": "concurrently \"npm run build:auth\" \"npm run build:file\" \"npm run build:media\"",
    "start:auth": "cd modules/auth-server && npm start",
    "start:file": "cd modules/file-server && npm start",
    "start:media": "cd modules/media-server && npm start",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:file\" \"npm run start:media\"",
    "apidoc:file": "cd modules/file-server && npm run apidoc",
    "apidoc:media": "cd modules/media-server && npm run apidoc",
    "apidoc:auth": "cd modules/auth-server && npm run apidoc",
    "apidoc:all": "concurrently \"npm run apidoc:auth\" \"npm run apidoc:file\" \"npm run apidoc:media\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.12",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/express": "^5.0.0",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "apidoc": "^1.2.0",
    "eslint": "^9.20.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
